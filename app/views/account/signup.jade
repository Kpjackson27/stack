extends ../layouts/default

block content
  .col-md-6.col-md-offset-3
    .container
      .page-header
        h3 Unleash Your Creativity
      form.form-horizontal(id='signup-form', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
          .col-sm-5
            input.form-control.input-sm(type='text', name='fullname', id='fullname', placeholder='Fullname', autofocus)
        .form-group
          .col-sm-5
            input.form-control.input-sm(type='email', name='email', id='email', placeholder='Email', autofocus)
        .form-group
          .col-sm-5
            input.form-control.input-sm(type='password', name='password', id='password', placeholder='Password')
        .form-group
          .col-sm-5
            input.form-control.input-sm(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password')
        .form-group
          .col-sm-5
            input.form-control.input-sm(type='text', name='username', id='username', placeholder='Username', autofocus)
        .form-group
          .col-sm-5
            a.btn.btn-default.btn-md.btn-block(type='submit') Sign Up
        .col-sm-5
          h6 By signing up, you agree to the Terms of Service and Privacy Policy, including Cookie Use. Others will be able to find you by email or phone number when provided.
           